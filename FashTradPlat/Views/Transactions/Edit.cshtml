@using static FashTradPlat.Models.Transaction;
@model FashTradPlat.Models.Transaction

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Transaction_ID" />
            <div class="form-group">
                <label asp-for="Product_ID" class="control-label"></label>
                <select asp-for="Product_ID" class="form-control" asp-items="ViewBag.Product_ID"></select>
                <span asp-validation-for="Product_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment_ID" class="control-label"></label>
                <select asp-for="Payment_ID" class="form-control" asp-items="ViewBag.Payment_ID"></select>
                <span asp-validation-for="Payment_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Checkout_ID" class="control-label"></label>
                <select asp-for="Checkout_ID" class="form-control" asp-items="ViewBag.Checkout_ID"></select>
                <span asp-validation-for="Checkout_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Stat))">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div>
                <label type="hidden" class="col-md-4 control-label">@Html.DisplayFor(Model => Model.TransactionDate)</label>
                <input type="hidden" id="lname" name="lname" value="@DateTime.Now.ToString("yyyy-MM-dd")"><br><br>
                <span asp-validation-for="TransactionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
