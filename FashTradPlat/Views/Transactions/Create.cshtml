@model FashTradPlat.Models.Transaction

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product_ID" class="control-label"></label>
                <select asp-for="Product_ID" class ="form-control" asp-items="ViewBag.Product_ID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Payment_ID" class="control-label"></label>
                <select asp-for="Payment_ID" class ="form-control" asp-items="ViewBag.Payment_ID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Checkout_ID" class="control-label"></label>
                <select asp-for="Checkout_ID" class ="form-control" asp-items="ViewBag.Checkout_ID"></select>
            </div>
            <div>
                <label type="hidden" class="col-md-4 control-label">@Html.DisplayFor(Model => Model.TransactionDate)</label>
                <input type="hidden" id="lname" name="lname" value="@DateTime.Now.ToString("yyyy-MM-dd")"><br><br>
                <span asp-validation-for="TransactionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SendAddress" class="control-label"></label>
                <input asp-for="SendAddress" class="form-control" />
                <span asp-validation-for="SendAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstCompletion" class="control-label"></label>
                <input asp-for="EstCompletion" class="form-control" />
                <span asp-validation-for="EstCompletion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
