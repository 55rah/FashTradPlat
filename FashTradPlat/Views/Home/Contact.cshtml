@{
    ViewData["Title"] = "Contact Us";
}
<head>
    <style>
        body {
            text-align: center;
        }
        h4 {
            float: left;
            color: #737373;
        }
        div.address {
            position: absolute;

            left: 400px;
            width: 215px;
            height: 100px;
        }
        form.form {
            border-style: solid;
            border-radius: 15px;
            padding: 15px;
            border-width: 2px;
        }
        p {
            float:left;
        }
    </style>
</head>


<body>
<h1>@ViewData["Title"]</h1>

<div>
    <form class="form" action="">
        <fieldset>
            <label for="fname">Full Name:</label>
            <br>
            <input label type="text" id="fname" name="fname" value=""> 
            <br>
            <label for="email">Email:</label>
            <br>
            <input type="email" id="email" name="email">
            <br>
            <br>
            <textarea name="message" rows="5" cols="40" value=""></textarea>
            <br>
            <input type="submit" onclick="alert('Email Sent!')" value="Send">
        </fieldset>
    </form>
</div>
<div class="address">
            <h4><i>Address</i></h4>
            <br/>
            <p>65 Dominion Road, Mt Eden, Auckland 1024</p>
</div>
</body>