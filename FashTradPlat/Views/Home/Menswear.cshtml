@{
    ViewData["Title"] = "Menswear";
}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            color: white;
        }

        /* two columns that floats next to each other */
        div.page {
            float: left;
            width: 50%;
            padding: 10px;

        }

        div.page2 {
            float: left;
            width: 50%;
            padding: 10px;
        }

        .row:after {
            content: "";
            display: table;
            clear: both;
        }
    </style>
</head>
<body>
    <div class="container text-black rounded text-center">
        <h1>Menswear</h1>
    </div>
    <div class="page container mt-3">
        <div class="card" style="width:400px">
            <img class="card-img-top" src="~/lib/images/blueplanet.png" alt="3D rendering of an imaginary blue planet in space" style="width:100%">
            <div class="card-body">
                <h4 class="card-title">Baalengia</h4>
                <p class="card-text">VNDS</p>
                <a class="btn btn-primary">See Listing</a>
            </div>
        </div>
    </div>
    <br>

    <div class="page2 container2 mt-3">
        <div class="card" style="width:400px">
            <img class="card-img-top" src="~/lib/images/blueplanet.png" alt="3D rendering of an imaginary blue planet in space" style="width:100%">
            <div class="card-body">
                <h4 class="card-title">Rric Owees</h4>
                <p class="card-text">8/10</p>
                <a class="btn btn-primary">See Listing</a>
            </div>
        </div>
    </div>
    <br>
</body>

</html>